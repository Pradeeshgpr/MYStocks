<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/shop_transaction_Details_update_transaction_toolbar"
        android:background="@color/design_default_color_primary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Transaction"
            android:textSize="20dp"/>

    </androidx.appcompat.widget.Toolbar>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/shop_transaction_Details_update_transaction_updateDetails"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/shop_transaction_Details_update_transaction_toolbar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_transaction_Details_update_transaction_updateDetails"
        android:id="@+id/shop_transaction_Details_update_transaction_submit"
        android:layout_alignParentEnd="true"
        android:text="Submit"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shop_transaction_Details_update_transaction_updateDetails"
        android:layout_toLeftOf="@+id/shop_transaction_Details_update_transaction_submit"
        android:layout_marginRight="10dp"
        android:id="@+id/shop_transaction_Details_update_transaction_cancel"
        android:text="Cancel"/>
</RelativeLayout>